<h1><%= @contact.name %></h1>

<div>
  <%= button_to "Back", contacts_path, method: :get %>
</div>

<p><strong>Name:</strong> <%= @contact.name %></p>
<p><strong>Email:</strong> <%= @contact.email %></p>

<p><strong>Notes:</strong></p>
<ul>
  <% @contact.notes.each do |note| %>
    <li>
