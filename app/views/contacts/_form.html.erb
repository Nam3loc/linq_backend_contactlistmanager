<%= form_with model: @contact do |form| %>
    <% if @contact.errors.any? %>
        <div>
        <h2><%= pluralize(@contact.errors.count, "error") %> prevented this contact from being saved:</h2>
        <ul>
            <% @contact.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :email %>
        <%= form.text_field :email %>
    </div>

    <div>
        <%= form.fields_for :notes do |note_form| %>
        <%= note_form.label :body, "Note" %>
        <%= note_form.text_area :body %>
        <% end %>
    </div>

    <div>
        <%= form.submit "Submit" %>
    </div>
<% end %>
